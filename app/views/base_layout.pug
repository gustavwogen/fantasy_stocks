doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    //- Bootstrap CSS
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js") 
    block scripts
    block style
    title Fantasy Stocks
  body 
    nav(class="navbar navbar-expand-lg navbar-light bg-ligth")
      a(class="navbar-brand", href="#")
      button(class="navbar-toggler", type="button", data-toggle="collapse", data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation") 
        span(class="navbar-toggler-icon")
      div#navbarSupportedContent(class="collapse navbar-collapse")
        ul(class="navbar-nav mr-auto")
          li(class="nav-item active")
            a(class="nav-link" href="/") Home
              span(class="sr-only") (current)
          if user.portfolios
            li(class="nav-item dropdown")
              a(class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Portfolios
              div(class="dropdown-menu" aria-labelledby="navbarDropdown")
                each portfolio, portfolio_id in user.portfolios
                  a(class="dropdown-item" href=`/portfolio/${portfolio_id}`)= portfolio.name
                div(class="dropdown-divider")
                a(class="dropdown-item" href="/portfolio/create") Create new portfolio
          if user.games
            li(class="nav-item dropdown")
              a(class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Games
              div(class="dropdown-menu" aria-labelledby="navbarDropdown")
                each game, game_id in user.games
                  a(class="dropdown-item" href=`/game/${game_id}`)= game.game_name
                div(class="dropdown-divider")
                a(class="dropdown-item" href="/game/create") Create new game
          li(class="nav-item")
            a(class="nav-link" href="/user/logout") Sign out
          li(class="nav-item")
            a(class="nav-link disabled" href="#") Disabled
        form(action="/search" method="GET" class="form-inline my-2 my-lg-0")
          input(class="form-control mr-sm-2" name="ticker" type="search" placeholder="Search stocks" aria-label="Search")
          button(class="btn btn-outline-success my-2 my-sm-0" type="submit") Search

    block content
      
    //- Optional JavaScript
    //- jQuery first, then Popper.js, then Bootstrap JS
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous")
