extends layout

block content
    h2 Create a new account 
    table 
        tr 
            td 
                label(for="username", name="username") Username:
            td
                input#username(type="text")
        tr
            td 
                label(for="email", name="email") Email:
            td 
                input#email(type="email", name="")
        tr 
            td 
                label(for="password", name="password") Password:
            td
                input#password(type="password", name="")
        tr 
            td 
                label(for="confirm-password", name="confirm-password") Confirm Password:
            td 
                input#confirm-password(type="password", name="")

    button#create Create account
    
    div#result

    p Already have an account? Log in #[a(href="/user/login") here]

    script(src="/scripts/create_user.js") 